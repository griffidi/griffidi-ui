root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,tsx,jsx}]
quote_type = single

[*.{css,html,js,md,ts,yml,tsx,jsx}]
indent_size = 2
max_line_length = 100
tab_width = 2

[*.{html,js,md,ts,tsx,jsx}]
block_comment_start = /**
block_comment = *
block_comment_end = */

[*.{css,html}]
quote_type = double

[*html]
on_different_lines = true

[*.css]
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.json]
max_line_length = 100
