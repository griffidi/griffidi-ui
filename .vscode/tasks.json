{
  "tasks": [
    {
      "type": "shell",
      "label": "Debug server",
      "osx": {
        "options": {
          "cwd": "${workspaceFolder}/apps/demo"
        }
      },
      "windows": {
        "options": {
          "cwd": "${workspaceFolder}/apps/demo"
        }
      },
      "command": "bun",
      "args": ["dev:debug"],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "."
          }
        }
      ]
    },
    {
      "type": "bun",
      "label": "dev:debug",
      "command": "bun",
      "args": ["dev:debug"],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "terminate-dev",
      "command": "pkill",
      "args": ["-f", "task dev:debug"],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
