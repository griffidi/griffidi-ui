{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useImportExtensions": "off",
        "noEmptyPattern": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "useHtmlLang": "off",
        "useKeyWithClickEvents": "off"
      },
      "nursery": {
        "useSortedClasses": "off"
      },
      "complexity": {
        "useLiteralKeys": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100,
    "useEditorconfig": true
  },
  "assist": {
    "actions": {
      "source": {
        "useSortedKeys": "on",
        "useSortedProperties": "on",
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              "builtin",
              "external",
              "internal",
              "parent",
              "sibling",
              "index"
            ]
          }
        },
        "recommended": true
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto",
      "indentStyle": "space",
      "lineEnding": "lf"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    },
    "parser": {
      "allowTrailingCommas": true
    }
  },
  "html": {
    "formatter": {
      "enabled": true,
      "attributePosition": "multiline",
      "bracketSameLine": true,
      "indentStyle": "space",
      "indentScriptAndStyle": true
    }
  }
}
